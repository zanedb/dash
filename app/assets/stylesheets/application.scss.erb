@import 'colors';
@import 'fonts';
@import 'nav';
@import 'basscss';

* {
  box-sizing: border-box;
  font-weight: inherit;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
html,
body {
  min-height: 100%;
}
body {
  display: flex;
  flex-direction: column;
  font-size: 1rem;
  font-family: 'Inter UI', system-ui, -apple-system, sans-serif;
  position: relative;
  -webkit-font-smoothing: antialiased;
  color: $black;
  margin: 0rem;
}
main {
  line-height: 1.5;
}

a {
  color: currentColor;
}

strong {
  font-weight: bold;
}

textarea {
  resize: none;
}

input[type='text'],
input[type='url'],
input[type='email'],
input[type='file'],
input[type='number'],
input[type='password'],
select,
textarea {
  -webkit-appearance: none;
  -moz-appearance: none;
  display: block;
  max-width: 32rem;
  min-height: 36px;
  line-height: inherit;
  font-family: inherit;
  font-size: 1rem;
  padding: 0.25rem 0.5rem;
  width: 100%;
  color: inherit;
  background-color: transparent;
  border-radius: 0.25rem;
  border-width: 1px;
  border-style: solid;
  border-color: $gray3;
  transition: box-shadow 0.125s ease-out;

  &:focus {
    box-shadow: $gray3;
    outline: none;
    border-color: $gray3;
  }
}

.field_with_errors {
  label {
    font-weight: bold;
    color: $red7;
  }
  input {
    border-color: $red7;
  }
}

pre {
  background-color: $gray0;
  padding: 12px;
  font-size: 0.75rem;
}

a {
  color: $gray8;

  &:hover &:focus {
    color: $gray9;
  }
}

.field {
  margin-bottom: 0.75rem;
}
.actions {
  margin-top: 1.5rem;
}

#error_explanation {
  width: 512px;
  border: 2px solid $red7;
  padding: 1rem;
  margin-bottom: 24px;
  background-color: $red0;
  border-radius: 4px;

  h2 {
    color: $red7;
    border-bottom-color: $red6;
    margin-top: 0;
    font-size: 1.25rem;
  }

  ul {
    margin-bottom: 0;
  }
}

label {
  display: block;
}

$select: "url(<%= asset_url('select.svg') %>)";
select {
  background: #{$select} right 0.75rem center / 0.5rem no-repeat $white;
}
// rails date(time) inputs
select[name$='i)]'] {
  width: 72px;
  display: inline-block;
}

.input--short {
  max-width: 16rem !important;
}

input[type='submit'],
.btn {
  color: $primary;
  background-color: #fff;
  border: 0;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: bold;
  box-shadow: inset 0 0 0 1px currentColor;
  -webkit-tap-highlight-color: transparent;
  appearance: none;
  align-items: center;
  line-height: 1.5;
  overflow: hidden;
  padding: 0.5rem 1rem;
  position: relative;
  text-align: center;
  text-decoration: none;
  text-transform: uppercase;
  transition: all 0.25s ease;
  cursor: pointer;

  &:hover {
    background-color: #2d9ce4;
    color: #fff;
  }
}
.btn.btn--destroy {
  background-color: #fff !important;
  color: $red5 !important;

  &:hover {
    background-color: $red5 !important;
    color: #fff !important;
  }
}
.btn.btn--success {
  background-color: #fff !important;
  color: $teal6 !important;

  &:hover {
    background-color: $teal6 !important;
    color: #fff !important;
  }
}

.container {
  width: 100%;
  max-width: 64rem;
  margin: 1rem auto;
  padding: 0 0.5rem;
}

.flash {
  display: flex;
  align-items: center;
  color: $white;
  background-color: $base;
  font-size: 0.875rem;
  margin-bottom: 1rem;
  border-radius: 0.25rem;
  padding: 0.25rem 0.75rem;
  max-width: 32rem;
}

.flash__close {
  cursor: pointer;
  margin-left: 1rem;
  font-size: 0.625rem;
  float: right;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 999px;
  width: 1.5rem;
  height: 1.5rem;
  text-align: center;
  line-height: 1.5rem;
}

.flash__content {
  flex: 1 1 auto;
}

.breadcrumbs {
  text-align: center;
  font-size: 1.1rem;

  :nth-child(1) {
    font-weight: 700;
  }
}

.heading {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  flex-wrap: wrap;
  .btn {
    margin-top: 8px;
    margin-bottom: 4px;
  }
}
h2.heading,
h3.heading {
  margin-bottom: 0;
  .btn {
    font-size: 0.875rem;
  }
}
@media (min-width: 32em) {
  .container {
    padding: 0 1rem;
  }
  .heading {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    .btn {
      margin-left: auto;
      margin-top: 0;
      + .btn {
        margin-left: 0.5rem;
      }
    }
  }
}

h1,
h2,
h3,
h4 {
  font-weight: bold;
  line-height: 1.125;
}
h1 {
  font-size: 2.5rem;
  padding-bottom: 8px;
  margin-bottom: 1rem;
}
h2 {
  font-size: 1.75rem;
  padding-bottom: 4px;
  margin-bottom: 0.5rem;
}
h1.heading,
h2.heading {
  border-bottom: 1px solid $gray3;
}
h3 {
  font-size: 1.5rem;
}
h4 {
  font-size: 1.25rem;
}

/* https://css-tricks.com/snippets/css/make-pre-text-wrap/ */
pre {
  white-space: pre-wrap; /* css-3 */
  white-space: -moz-pre-wrap; /* Mozilla, since 1999 */
  white-space: -pre-wrap; /* Opera 4-6 */
  white-space: -o-pre-wrap; /* Opera 7 */
  word-wrap: break-word; /* Internet Explorer 5.5+ */
}

.badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  border-radius: 999px;
  color: $white;
  background-color: $gray6;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}
.heading .badge {
  font-size: 1rem;
  margin-left: 1rem;
}
li .badge {
  font-size: 0.75rem;
  padding: 0 0.5rem;
  margin-left: 0.5rem;
}
.no-decoration {
  text-decoration: none;
}

@import 'lists';
@import 'utilities';
