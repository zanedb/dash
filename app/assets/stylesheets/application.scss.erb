@import 'colors';

/* normal */
@font-face {
  font-family: 'Inter UI';
  font-style: normal;
  font-weight: 400;
  src: asset_url('Inter-UI-Regular.woff2') format('woff2'),
    asset_url('Inter-UI-Regular.woff') format('woff');
}
@font-face {
  font-family: 'Inter UI';
  font-style: italic;
  font-weight: 400;
  src: asset_url('Inter-UI-Italic.woff2') format('woff2'),
    asset_url('Inter-UI-Italic.woff') format('woff');
}
/* bold */
@font-face {
  font-family: 'Inter UI';
  font-style: normal;
  font-weight: 700;
  src: asset_url('Inter-UI-Bold.woff2') format('woff2'),
    asset_url('Inter-UI-Bold.woff') format('woff');
}
@font-face {
  font-family: 'Inter UI';
  font-style: italic;
  font-weight: 700;
  src: asset_url('Inter-UI-BoldItalic.woff2') format('woff2'),
    asset_url('Inter-UI-BoldItalic.woff') format('woff');
}

* {
  box-sizing: border-box;
  font-weight: inherit;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
html,
body {
  min-height: 100%;
}
body {
  display: flex;
  flex-direction: column;
  font-size: 1rem;
  font-family: 'Inter UI', system-ui, -apple-system, sans-serif;
  line-height: 1.5;
  position: relative;
  -webkit-font-smoothing: antialiased;
  color: $black;
  margin: 1rem;
}

a {
  color: currentColor;
}

strong {
  font-weight: bold;
}

textarea {
  resize: none;
}

input[type='text'],
input[type='url'],
input[type='email'],
input[type='file'],
input[type='number'],
input[type='password'],
select,
textarea {
  -webkit-appearance: none;
  -moz-appearance: none;
  display: block;
  max-width: 32rem;
  min-height: 36px;
  line-height: inherit;
  font-family: inherit;
  font-size: 1rem;
  padding: 0.25rem 0.5rem;
  width: 100%;
  color: inherit;
  background-color: transparent;
  border-radius: 0.25rem;
  border-width: 1px;
  border-style: solid;
  border-color: $gray3;
  transition: box-shadow 0.125s ease-out;

  &:focus {
    box-shadow: $gray3;
    outline: none;
    border-color: $gray3;
  }
}

.field_with_errors {
  label {
    font-weight: bold;
    color: $red7;
  }
  input {
    border-color: $red7;
  }
}

pre {
  background-color: $gray0;
  padding: 12px;
  font-size: 0.75rem;
}

a {
  color: $gray8;

  &:hover &:focus {
    color: $gray9;
  }
}

.field {
  margin-bottom: 0.75rem;
}
.actions {
  margin-top: 1.5rem;
}

#error_explanation {
  width: 512px;
  border: 2px solid $red7;
  padding: 1rem;
  margin-bottom: 24px;
  background-color: $red0;
  border-radius: 4px;

  h2 {
    color: $red7;
    border-bottom-color: $red6;
    margin-top: 0;
    font-size: 1.25rem;
  }

  ul {
    margin-bottom: 0;
  }
}

label {
  display: block;
}

$select: "url(<%= asset_url('select.svg') %>)";
select {
  background: #{$select} right 0.75rem center / 0.5rem no-repeat $white;
}
// rails date(time) inputs
select[name$='i)]'] {
  width: 72px;
  display: inline-block;
}

.input--short {
  max-width: 16rem !important;
}

input[type='submit'],
.btn {
  padding-left: 16px;
  padding-right: 16px;
  padding-top: 8px;
  padding-bottom: 8px;
  background-color: $red5;
  color: $white;
  font-size: 1.25rem;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  font-family: inherit;
  font-weight: bold;
  line-height: 1.125;
  -webkit-appearance: none;
  -moz-appearance: none;
  cursor: pointer;
  box-shadow: 0 2px 8px $gray4;
  margin: 0;
  text-decoration: none;
  border-radius: 9999px;
  border-width: 0px;
  border-style: solid;
}
.btn.btn--destroy {
  background-color: $gray0 !important;
  color: $red5 !important;
}

.container {
  width: 100%;
  max-width: 64rem;
  margin: 1rem auto;
  padding: 0 0.5rem;
}

.flash {
  display: flex;
  align-items: center;
  color: $white;
  background-color: $base;
  font-size: 0.875rem;
  margin-bottom: 1rem;
  border-radius: 0.25rem;
  padding: 0.25rem 0.75rem;
  max-width: 32rem;
}

.flash__close {
  cursor: pointer;
  margin-left: 1rem;
  font-size: 0.625rem;
  float: right;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 999px;
  width: 1.5rem;
  height: 1.5rem;
  text-align: center;
  line-height: 1.5rem;
}

.flash__content {
  flex: 1 1 auto;
}

.heading {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  flex-wrap: wrap;
  .btn {
    margin-top: 8px;
    margin-bottom: 4px;
  }
}
h2.heading,
h3.heading {
  margin-bottom: 0;
  .btn {
    font-size: 0.875rem;
  }
}
@media (min-width: 32em) {
  .container {
    padding: 0 1rem;
  }
  .heading {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    .btn {
      margin-left: auto;
      margin-top: 0;
      + .btn {
        margin-left: 0.5rem;
      }
    }
  }
}

$chevron: "url(<%= asset_url 'chevron.svg' %>) right 12px center no-repeat";
.list {
  list-style: none;
  padding: 0;
  margin: 0;
  > a,
  li > a:first-child {
    display: block;
    color: inherit;
    text-decoration: none;
  }
  > a > li,
  > li {
    border-bottom: 1px solid $gray2;
    padding: 12px;
    display: flex;
    flex-direction: column;
    background: #{$chevron};
    > p {
      margin: 0;
    }
  }
  &.list--row > li,
  &.list--row > a > li {
    flex-direction: row;
    align-items: center;
  }
  &.list--row p {
    flex: 1 1 auto;
  }
  .btn {
    font-size: 0.875rem;
    @media screen and (min-width: 32em) {
      margin-top: -4px;
      margin-bottom: -3px;
    }
  }
}
.list--row li {
  flex-direction: row;
}
.list--unlinked li {
  background: white;
  &.bg-snow {
    background: $gray0;
  }
}
.list--border-top {
  border-top: 1px solid $gray2;
}
h1 + .list,
h1 + .details {
  margin-top: -1rem;
}
h3 + .list {
  border-top: 1px solid $gray2;
}

.details {
  > p,
  > div {
    display: grid;
    border-bottom: 1px solid $gray2;
    padding-top: 1rem;
    padding-bottom: 1rem;
    margin: 0;

    @media (min-width: 32em) {
      grid-template-columns: 16rem auto;
      grid-gap: 0.5rem;

      strong {
        text-align: right;
      }
    }
  }
}

h1,
h2,
h3,
h4 {
  font-weight: bold;
  line-height: 1.125;
}
h1 {
  font-size: 2.5rem;
  padding-bottom: 8px;
  border-bottom: 1px solid $gray3;
  margin-bottom: 1rem;
}
h2 {
  font-size: 1.75rem;
  padding-bottom: 4px;
  border-bottom: 1px solid $gray3;
  margin-bottom: 0.5rem;
}
h3 {
  font-size: 1.5rem;
}
h4 {
  font-size: 1.25rem;
}

.badge {
  display: inline-block;
  padding: 0.1rem 0.5rem;
  margin-left: 0.5rem;
  border-radius: 0.5rem;
  color: $gray0;
  background-color: $blue5;
  text-transform: uppercase;
  letter-spacing: 0.1rem;
}

.no-margin {
  margin: 0;
}
.a-lil-bottom-margin {
  margin: 0 0 1rem;
}

$__palette: (
  primary: $base,
  accent: $fuschia5,
  info: $blue5,
  success: $teal6,
  error: $red7,
  warning: $orange5,
  pending: $yellow5,
  black: $gray9,
  slate: $gray8,
  muted: $gray6,
  smoke: $gray2,
  snow: $gray0,
  white: $white
);

@each $name, $val in $__palette {
  .#{$name} {
    color: $val;
  }

  .bg-#{$name} {
    background-color: $val;
  }

  .b--#{$name} {
    border-color: $val;
  }
}
