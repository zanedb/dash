@import 'colors';
@import 'nav';
@import 'basscss';
@import 'space';

* {
  box-sizing: border-box;
  font-weight: inherit;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
}
html,
body {
  min-height: 100vh;
  background: #fff;
}
body {
  display: flex;
  flex-direction: column;
  font-size: 1rem;
  font-family: 'ProximaNova', system-ui, -apple-system, Roboto, sans-serif;
  position: relative;
  -webkit-font-smoothing: antialiased;
  color: $black;
  margin: 0rem;
}
main {
  line-height: 1.5;
  position: relative;
}

a {
  color: currentColor;
}

strong {
  font-weight: bold;
}

textarea {
  resize: none;
}

input[type='text'],
input[type='search'],
input[type='url'],
input[type='email'],
input[type='file'],
input[type='number'],
input[type='password'],
select,
textarea {
  -webkit-appearance: none;
  -moz-appearance: none;
  display: block;
  max-width: 32rem;
  min-height: 36px;
  margin: 0;
  line-height: inherit;
  font-family: inherit;
  font-size: 1rem;
  padding: 0.25rem 0.5rem;
  width: 100%;
  color: inherit;
  background-color: transparent;
  border-radius: 0.25rem;
  border-width: 1px;
  border-style: solid;
  border-color: $gray3;
  transition: box-shadow 0.125s ease-out;

  &:focus {
    box-shadow: $gray3;
    outline: none;
    border-color: $gray3;
  }
  &::placeholder {
    color: $gray5;
  }
}

input[type='search']::-webkit-search-decoration {
  display: none;
}

.field_with_errors {
  label {
    font-weight: bold;
    color: $red7;
  }
  input {
    border-color: $red7;
  }
}

pre,
code {
  background-color: $gray1;
  font-size: 0.875rem;
  border-radius: 0.25rem;
}
pre {
  padding: 12px;
}
code {
  padding: 0 0.375rem;
}

a {
  color: $primary;

  &:hover &:focus {
    color: darken($primary, 10%);
  }
}

.field {
  margin-bottom: 0.75rem;
}
.actions {
  margin-top: 1.5rem;
}

#error_explanation {
  width: 512px;
  border: 2px solid $red7;
  padding: 1rem;
  margin-bottom: 24px;
  background-color: $red0;
  border-radius: 4px;

  h2 {
    color: $red7;
    border-bottom-color: $red6;
    margin-top: 0;
    font-size: 1.25rem;
  }

  ul {
    margin-bottom: 0;
  }
}

label {
  display: block;
}

$select: "url(<%= asset_url('select.svg') %>)";
select {
  background: #{$select} right 0.75rem center / 0.5rem no-repeat $white;
}
// rails date(time) inputs
select[name$='i)]'] {
  width: 72px;
  display: inline-block;
}
// rails month & hour inputs should be wider
select[id$='date_2i'] {
  width: 6.5rem;
}
select[id$='date_4i'] {
  width: 5rem;
}

.input--short {
  max-width: 16rem !important;
}

input[type='submit'],
.btn {
  border: 0;
  color: $white;
  background-color: $primary;
  border-radius: 9999px;
  font-size: 1rem;
  font-weight: bold;
  font-family: inherit;
  -webkit-tap-highlight-color: transparent;
  appearance: none;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1.25;
  overflow: hidden;
  padding: 0.5rem 1rem;
  text-align: center;
  text-decoration: none;
  transition: all 0.25s ease;
  cursor: pointer;

  &:focus,
  &:hover {
    background-color: $blue7;
  }
}
.btn.bg-destroy {
  &:focus,
  &:hover {
    background-color: $red7;
  }
}
.btn.bg-success {
  &:focus,
  &:hover {
    background-color: $teal8;
  }
}
.btn.btn--icon {
  width: 2.25rem;
  height: 2.25rem;
  align-items: center;
  justify-content: center;
  display: inline-flex;
  padding: 0;
  border-radius: 50%;
  -webkit-tap-highlight-color: transparent;
}
.btn.btn--lg {
  padding: 0.5rem 1.25rem;
}

.container {
  width: 100%;
  max-width: 64rem;
  margin: 0 auto;
  padding: 0 0.5rem;

  @media (max-width: 32em) {
    padding: 0 1rem;
  }
}
.container--md {
  max-width: 48rem;
}
.container--sm {
  max-width: 32rem;
}
.container--none {
  padding: 0 !important;
  margin: 0;
  max-width: none;
}

.turbolinks-progress-bar {
  background-color: $primary;
}

.flash {
  display: flex;
  align-items: center;
  color: $white;
  background-color: $base;
  font-size: 0.875rem;
  border-radius: 9999px;
  padding: 0.25rem 1rem;
  max-width: 24em;
  min-height: 2.25rem;
  line-height: 1.5;
  position: absolute;
  right: 0;
  left: 0;
  top: 1rem;
  animation: scale-fade-in 0.2s linear;
  z-index: 99999;

  @media (max-width: 32em) {
    max-width: 16em;
  }
}

.flash__close {
  cursor: pointer;
  margin-left: 1rem;
  font-size: 0.625rem;
  float: right;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 999px;
  width: 1.5rem;
  height: 1.5rem;
  text-align: center;
  line-height: 1.5rem;
}

.flash__content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flash__full {
  height: 2.25rem;
  display: flex;
  align-items: center;
  justify-content: center;
}
.flash__registration-closed {
  background-color: $yellow1;
  color: $orange9;
  font-weight: bold;

  @media (max-width: 40em) {
    text-align: center;
    padding: 1rem;
    height: 4rem;
  }
}

.full-width {
  width: 100vw;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
}

.breadcrumbs {
  text-align: center;
  font-size: 1.1rem;
  margin-top: 0.5rem;
  margin-bottom: 2rem;

  :nth-child(1) {
    font-weight: 700;
  }
}

.heading {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  flex-wrap: wrap;
  .btn {
    margin-top: 8px;
    margin-bottom: 4px;
  }
}
h2.heading,
h3.heading {
  margin-bottom: 0;
}
@media (min-width: 32em) {
  .container {
    padding: 0 1rem;
  }
  .heading {
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    .btn {
      margin-left: auto;
      margin-top: 0;
      + .btn {
        margin-left: 0.5rem;
      }
    }
  }
}

h1,
h2,
h3,
h4 {
  font-weight: bold;
  line-height: 1.125;
}
h1 {
  font-size: 2.5rem;
  margin-bottom: 1rem;

  @media (max-width: 32em) {
    font-size: 2rem;
  }
}
h2 {
  font-size: 1.75rem;
  margin-bottom: 0.5rem;
}
h3 {
  font-size: 1.5rem;
}
h4 {
  font-size: 1.25rem;
}

p.info {
  @media (max-width: 32em) {
    font-size: 1rem;
  }
}

/* https://css-tricks.com/snippets/css/make-pre-text-wrap/ */
pre {
  white-space: pre-wrap; /* css-3 */
  white-space: -moz-pre-wrap; /* Mozilla, since 1999 */
  white-space: -pre-wrap; /* Opera 4-6 */
  white-space: -o-pre-wrap; /* Opera 7 */
  word-wrap: break-word; /* Internet Explorer 5.5+ */
}

table {
  border-collapse: collapse;
  width: 100%;
}
th {
  font-weight: bold;
  text-align: left;
  padding-bottom: 0.125rem;
}
td {
  padding-left: 0;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
}
thead,
tr {
  border-bottom: 1px solid $gray2;
}

.badge {
  color: $gray9;
  background-color: $gray1;
  border-radius: 999px;
  display: inline-block;
  font-size: 0.75rem;
  font-weight: bold;
  line-height: 1.25;
  min-width: 16px;
  padding: 0.125rem 0.5rem;

  &.bg-success {
    color: $teal9;
    background-color: $teal1;
  }
  &.bg-info {
    color: $blue9;
    background-color: $blue1;
  }
  &.bg-error {
    color: $red9;
    background-color: $red1;
  }
}
label .badge {
  height: 16px;
  line-height: 1;
  padding: 0.125rem 0.5rem;
}
.heading .badge {
  margin-left: 1rem;
}
li .badge {
  font-size: 0.75rem;
  padding: 0 0.5rem;
  margin-left: 0.5rem;
}
.no-decoration {
  text-decoration: none;
}

.stat-value {
  font-weight: 900;
  font-size: 3rem;
  line-height: 1;
}
.stat-label {
  color: $gray6;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  font-size: 1rem;
}

.attendee-stats-container {
  display: flex;
  flex-flow: column-reverse;

  @media (min-width: 32em) {
    flex-direction: row;
    margin-top: 1rem;
  }
}
.attendee-stats-graph {
  height: 12rem;
}
.attendee-stats {
  div:nth-child(2) {
    margin: 1rem 0 0;
  }

  @media (max-width: 32em) {
    margin: 1rem 0;
    display: flex;
    flex-wrap: wrap;

    div:nth-child(2) {
      margin: 0 0 0 1rem;
    }
  }
}
.attendee-stats-btn {
  margin: 1.5rem 0 0;

  @media (max-width: 32em) {
    margin: 1rem 0;
  }
}

.dropdown__btn {
  cursor: pointer;
}
.dropdown {
  position: relative;
  display: inline-block;
}
.dropdown__content {
  list-style: none;
  display: none;
  position: absolute;
  right: 0;
  background-color: #fff;
  min-width: 12rem;
  overflow: hidden;
  line-height: 1.5;
  border-radius: 0.25rem;
  box-shadow: 0 8px 16px 0px rgba(0, 0, 0, 0.25);
  z-index: 1;

  a {
    padding: 0.5rem 1rem;
    text-decoration: none;
    display: block;
    color: $gray8;
    transition: all 0.25s ease;

    &:hover {
      background-color: $blue0;
      color: $primary;
    }
  }
  li:not(:last-child) a {
    border-bottom: 1px solid $gray1;
  }
}

.action-sheet {
  position: absolute;
  right: 1rem;

  @media (max-width: 32em) {
    margin-right: 1rem;
    right: 0.25rem;
    width: 2rem;
    height: 2rem;
  }
}
.action-sheet .dropdown__content {
  padding: 0;
  margin: 0;

  a {
    padding: 0.5rem 1rem;
  }
}

.title {
  justify-content: center;
  text-transform: uppercase;
  letter-spacing: 2px;
  font-weight: 900;
  color: #0069ff;
}

@media (min-width: 32em) {
  .two-column {
    display: flex;
    flex-direction: row;
    width: 100vw;
    height: 100vh;
  }
  .two-column > .left-column {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .two-column > .left-column > .left--inside {
    align-self: center;
    min-width: 24rem;
  }
  .two-column > .right-column {
    width: 50%;
  }
}
@media (max-width: 32em) {
  .two-column {
    padding: 1rem;
  }
}

.pattern {
  background-color: $primary;
  background-image: url('https://hackclub.com/pattern.svg');
}

.filterbar {
  padding: 0 0 1rem;
  width: 100%;
}
.filterbar__search {
  @media screen and (min-width: 32em), all {
    margin-right: 1rem !important;
  }
}
.filterbar__item {
  border-radius: 1rem;
  cursor: pointer;
  display: inline-block;
  flex-shrink: 0;
  font-weight: 500;
  line-height: 1.75;
  outline: 0;
  padding: 0.125rem 0.75rem;
  text-decoration: none;
}
.filterbar__item[aria-selected='true'] {
  background-color: $primary;
  color: #fff;
}

.dark-mode-toggle {
  cursor: pointer;
  margin-right: 0.5rem;
  fill: $gray7;
  line-height: 0;
}

html.dark {
  filter: invert(1) hue-rotate(180deg);

  .dropdown__content {
    box-shadow: 0 1px 4px 0px rgba(0, 0, 0, 0.25);
  }

  input[type='submit'],
  .btn {
    background-color: $blue7;
    &:focus,
    &:hover {
      background-color: $primary;
    }
  }
  .btn.bg-destroy {
    background-color: $red7;
    &:focus,
    &:hover {
      background-color: $red5;
    }
  }
  .btn.bg-success {
    background-color: $teal9;
    &:focus,
    &:hover {
      background-color: $teal7;
    }
  }
  input[type='text'],
  input[type='search'],
  input[type='url'],
  input[type='email'],
  input[type='file'],
  input[type='number'],
  input[type='password'],
  select,
  textarea {
    background-color: #252429;
    border-color: #252429;
    color: #fff;
  }

  .primary,
  .error,
  input[type='submit'],
  .btn,
  img,
  input[type='text'],
  input[type='search'],
  input[type='url'],
  input[type='email'],
  input[type='file'],
  input[type='number'],
  input[type='password'],
  select,
  textarea,
  .flash__content,
  .pattern {
    filter: invert(1) hue-rotate(180deg);
  }
}

@import 'lists';
@import 'utilities';
