<% title "Hardware on #{@event.name}" %>
<div class="breadcrumbs">
  <%= link_to 'Home', root_path %> › <%= link_to 'Events', events_path %> › <%= link_to @event.name, @event %>
</div>

<h1 class="heading">
  Hardware items <span class="badge"><%= @hardwares.count %></span>
  <%= link_to 'Add a hardware item', new_event_harware_path(event: @event), class: 'btn bg-success' %>
</h1>

<% if @hardwares.empty? %>
  <p class="muted">There are no hardware items.</p>
<% else %>
  <ul class="list list--row">
    <% @hardwares.each do |hardware| %>
      <%= link_to event_hardware_path(@event, hardware) do %>
        <li>
          <strong style="display: block;">
            <%= hardware.description %>
          </strong>
          <span class="muted">
            <%= hardware.checked_out_description %>
            <%= content_tag :span, "#{time_ago_in_words(checked_out_at)} ago" if harware.checked_out? %>
          </span>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
