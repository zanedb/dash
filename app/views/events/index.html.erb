<div class="breadcrumbs">
  <%= link_to 'Home', root_url %>
</div>

<% if @invites.any? %>
  <h1>
    Invitations
  </h1>
  <p class="a-lil-bottom-margin slate">You have <%= pluralize @invites.count, 'pending invitation' %>.</p>
  <ul class="list list--border-top">
    <% @invites.each do |invite| %>
      <li><%= link_to invite.event.name, event_organizer_position_invite_path(invite.event, invite) %></li>
    <% end %>
  </ul>
<% end %>

<% if @events.any? || @invites.empty? %>
  <h1 class="heading">
    Events 
    <% if current_user.admin? %>
      <span class="muted" style="margin-left: 0.5rem;">(all)</span>
      <%= link_to 'New Event', new_event_path, class: 'btn bg-success' %>
    <% end %>
  </h1>
  <% if @events.empty? %>
    <p class="muted">There are no events.</p>
  <% else %>
    <ul class="list">
      <% @events.each do |event| %>
        <li><%= link_to event.name, event %></h3></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

