<% title "Webhooks on #{@event.name}" %>
<% page_md %>

<%= render 'events/nav', event: @event, active: 'settings' %>

<h1 class="heading">
  Webhooks
  <%= link_to 'Add webhook', new_event_webhook_path(@event), class: 'btn' %>
</h1>
<p class="muted">These webhooks will send whatever requests you setup whenever an attendee is created.</p>

<% if @webhooks.empty? %>
  <p class="muted">There are no webhooks.</p>
<% else %>
  <ul class="list">
    <% @webhooks.each do |webhook| %>
      <%= link_to edit_event_webhook_path(@event, webhook) do %>
        <li>
          <span class="bold block">
            <%= webhook.name %>
          </span>
          <span class="muted">
            <%= webhook.request_type %> request to <%= webhook.url %>
          </span>
        </li>
      <% end %>
    <% end %>
  </ul>
<% end %>
