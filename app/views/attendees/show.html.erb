<div class="breadcrumbs">
  <%= link_to 'Home', root_url %> › <%= link_to 'Events', events_url %> › <%= link_to @event.name, @event %> › <%= link_to 'Attendees', event_attendees_path %> › <%= link_to "#{@attendee.first_name} #{@attendee.last_name}", '#'%>
</div>

<h1><%= "#{@attendee.fname} #{@attendee.lname}" %></h1>
<h3 class="no-margin">
  Email: <%= link_to @attendee.email, "mailto:#{@attendee.email}" %>
</h3>
<h4 class="no-margin">
  <br/>
  Notes:<br/>
  <%= @attendee.note %>
</h4>
<h3>Event: <%= link_to @event.name, @event %></h3>

<%= link_to 'Edit', edit_event_attendee_path(@event, @attendee) %>
<%= link_to 'Delete attendee', event_attendee_path(@event, @attendee), method: :delete, data: { confirm: 'Are you sure?' } %>
