<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for :title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag '/favicon.ico' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    '/proxima.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' if defined?(@include_react) %>
  </head>

  <body>
    <%= impersonation_banner current_user, true_user %>
    <%= render 'layouts/nav' %>
    <main class="container <%= content_for :container_class %>">
      <%= yield %>
    </main>
  </body>
</html>
