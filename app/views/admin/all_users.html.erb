<% title 'All Users' %>
<div class="breadcrumbs">
  <%= link_to 'Grand Admin Station', root_url %>
</div>

<h1>All Users</h1>

<% if @users.empty? %>
  <h3>No users. Wait, how is that even possible? Youâ€™re here, right? Right?</h3>
<% else %>
  <p class="h2 bold m0">Total Users: <%= @users.count %></p>
  <p class="h2 bold m0">New this week: <%= @users_new_week_count %></p>
  <p class="h2 bold m0">All active users: <%= @users_active_count %></p>
  <h2>Admins</h2>
  <ul class="list list--row">
    <% @users.admins.each do |user| %>
      <%= link_to user_path(user) do %>
      <li>
        <%= avatar_for user, 48 %>
        <div class="ml2">
            <strong style="display: block;"><%= user.name %></strong>
            <span class="muted"><%= user.email %></span>
        </div>
      </li>
    <% end %>
    <% end %>
  </ul>
  <h2>Users</h2>
  <ul class="list list--row">
    <% @users.organizers.each do |user| %>
      <%= link_to user_path(user) do %>
      <li>
        <%= avatar_for user, 48 %>
        <div class="ml2">
            <strong style="display: block;"><%= user.name %></strong>
            <span class="muted"><%= user.email %></span>
        </div>
      </li>
    <% end %>
    <% end %>
  </ul>
<% end %>
